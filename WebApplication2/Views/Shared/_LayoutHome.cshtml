@using WebApplication2.HelperClass;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phương An</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="header">
        <div class="container-box">
            <!-- logo & menu -->
            <div class="nav">
                <div class="logo">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/imagess/logo-q.png" alt="">
                    </a>
                </div>
                <div class="menu">
                    <ul class="menu-list">
                        <li class="menu-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="menu-item"><a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Product</a></li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
                <a class="navbar-brand" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                    <img class="nav-cart" src="~/imagess/cart.png" alt="">
                    @{
                        var cart = Context.Session.GetObjectFromJson<ShoppingCart>("Cart");
                        var itemCount = cart?.Items.Sum(x => x.Quantity) ?? 0;
                    }
                    <span id="cartItemCount">@itemCount</span>
                </a>
            </div>
            <!-- end -->
            <!-- banner -->
            <div class="banner-slider">
                <!-- Banner 1 -->
                <div class="banner">
                    <div class="row">
                        <div class="col-2">
                            <h1>Bún Bò Huế – Hương Vị Từ Làng Quê</h1>
                            <p>Bát bún tươi ngon không chỉ là món ăn, mà còn là câu chuyện về hương vị quê hương. Từng sợi bún mềm mịn hòa quyện với nước dùng thanh ngọt, được chế biến từ những nguyên liệu tự nhiên nhất. Thưởng thức bún là trở về với sự mộc mạc, bình dị và tinh tế của đất Việt</p>
                            <a href="@Url.Action("Index", "Product")" class="btn-header btn-primary">Khám phá ngay &#10132;</a>
                        </div>
                        <div class="col-2">
                            <img src="~/imagess/bun-banner.png" alt="" class="img-header">
                        </div>
                    </div>
                </div>
                <!-- Banner 2 -->
                <div class="banner">
                    <div class="row">
                        <div class="col-2">
                            <h1>Phở Hà Nội – Tinh Hoa Đất Việt</h1>
                            <p>Phở không chỉ là món ăn, mà còn là biểu tượng của tinh hoa ẩm thực Việt Nam. Với nước dùng đậm đà từ xương hầm hàng giờ, bánh phở mềm mại và thịt bò tươi ngon, mỗi bát phở là sự kết hợp hoàn hảo giữa truyền thống và tình yêu. Hãy để phở đưa bạn vào hành trình khám phá hương vị đặc sắc của quê nhà.</p>
                            <a href="@Url.Action("Index", "Product")" class="btn-header btn-primary">Khám phá ngay &#10132;</a>
                        </div>
                        <div class="col-2">
                            <img src="~/imagess/pho-banner.png" alt="" class="img-header">
                        </div>
                    </div>
                </div>

                <!-- Banner 3 -->
                <div class="banner">
                    <div class="row">
                        <div class="col-2">
                            <h1>Mì Quảng – Đặc Sản Xứ Quảng</h1>
                            <p>Mì Quảng không chỉ là món ăn, mà còn là niềm tự hào của người dân miền Trung. Với sợi mì vàng óng, nước lèo đậm đà từ tôm, thịt và các loại thảo mộc, món ăn mang đến sự phong phú cả về hương vị lẫn màu sắc. Một tô mì Quảng là sự hòa quyện của đất, nước và tình người.</p>
                            <a href="@Url.Action("Index", "Product")" class="btn-header btn-primary">Khám phá ngay &#10132;</a>
                        </div>
                        <div class="col-2">
                            <img src="~/imagess/myquang-banner.png" alt="" class="img-header">
                        </div>
                    </div>
                </div>

            </div>

            <!-- end -->
        </div>
    </div>

    <div class="container fade-in">
        @RenderBody()
    </div>
    <!-- Quang cao -->
    <div class="offer fade-in">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="~/imagess/logo-c.png" alt="" class="img-offer">
                </div>

                <div class="col-2">
                    <p>Chào mừng bạn đến với</p>
                    <h1>Phương An</h1>
                    <p class="small-text">
                        Tại Phương An, chúng tôi mang đến những món ăn tinh túy như bún thanh ngọt, phở đậm đà, và mì Quảng dân dã, được chế biến từ nguyên liệu tươi ngon và chất lượng. Không chỉ là một quán ăn, Phương An còn là nơi gắn kết yêu thương qua từng bữa ăn.

                        Hãy ghé thăm Phương An để trải nghiệm hương vị quê hương và sự phục vụ tận tình từ chúng tôi!
                    </p>
                    <a asp-area="" asp-controller="Product" asp-action="Index" onclick="buyNow(); return false;" class="btn-offer-buy btn-primary">Buy Now &#10132</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end -->
    <!-- nhan xet khach hang -->
    <div id="rating" class="testimonial fade-in">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <i class="fa fa-quote-left"></i>
                    <p>Ich habe Phở Phương An während meiner Reise nach Vietnam besucht und war sehr beeindruckt. Die Gerichte, besonders die Pho und Bun Bo Hue, sind köstlich. Der Brühe ist sehr geschmackvoll und die Zutaten frisch. Das Restaurant hat eine angenehme Atmosphäre und der Service ist freundlich. Sehr empfehlenswert für alle, die vietnamesisches Essen lieben.</p>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <img src="~/imagess/hl.png" alt="" class="avartar">
                    <h3>Adoft Hitler</h3>
                </div>
                <div class="col-3">
                    <i class="fa fa-quote-left"></i>
                    <p>Я посетил Phở Phương An во время путешествия по Вьетнаму и был очень впечатлён. Блюда, особенно фо и бун бо хуэ, просто восхитительны. Бульон насыщенный, а ингредиенты свежие. Атмосфера в ресторане приятная, а обслуживание дружелюбное. Рекомендую всем любителям вьетнамской кухни!</p>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half"></i>
                    </div>
                    <img src="~/imagess/sta.png" alt="" class="avartar">
                    <h3>Iosif Vissarionovich Stalin</h3>
                </div><div class="col-3">
                    <i class="fa fa-quote-left"></i>
                    <p>I visited Phở Phương An during my trip to Vietnam and was really impressed. The dishes, especially the pho and bun bo hue, are delicious. The broth is rich in flavor and the ingredients are fresh. The restaurant has a great atmosphere, and the service is friendly. Highly recommend for anyone who loves Vietnamese cuisine!</p>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <img src="~/imagess/rsv.png" alt="" class="avartar">
                    <h3>Franklin D. Roosevelt</h3>
                </div>
            </div>
        </div>
    </div>
    <!-- end -->
    <!-- FOOTER -->

    <div class="footer fade-in">
        <div class="container">
            <div class="row">
                <!-- dowload app -->
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Andriod and ios mobile phone.</p>
                    <div class="app-logo">
                        <img src="~/imagess/play-store.png" alt="">
                        <img src="~/imagess/app-store.png" alt="">
                    </div>
                </div>
                <!-- end -->
                <!-- logo footer -->
                <div class="footer-col-2">
                    <img src="~/imagess/logo-q.png" alt="">
                    <p>Our Purpose Is To Sustainably Make the Pleasure and Benefits of Sports Accessible to the Many.</p>

                </div>
                <!-- end -->
                <!-- useful link -->
                <div class="footer-col-3">
                    <h3>Userful Links</h3>
                    <ul>
                        <li>Coupons</li>
                        <li>Blog Post</li>
                        <li>Return Policy</li>
                        <li>Become Affiliate</li>
                    </ul>
                </div>
                <!-- end -->
                <!-- follow us -->
                <div class="footer-col-4">
                    <h3>Follow us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>
                <!-- end -->

            </div>
            <!-- chan footer -->
            <hr>
            <p class="copyright">copyright 2021 - Phương An</p>
        </div>
    </div>
    <!-- END -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
